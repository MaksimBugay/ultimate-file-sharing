# npm install -g terser

cd js

#pushca.min.js
terser fp.min.js common-utils.js callable-future.js uuid.min.js security-utils.js owner-signature.js pnotifications.js pushca-binary-helper.js  -o pushca.min.js -c -m

#pushca.file-transfer.min.js
terser fp.min.js detect.min.js client.min.js uuid.min.js qrcode.min.js jsQR.js purify.min.js device-secret.js common-utils.js callable-future.js pnotifications.js pushca-binary-helper.js security-utils.js gateway-server.js transfer-commons.js localization.js consent-dialog.js transfer-site.js -o pushca.file-transfer.min.js -c -m

#puzzle.captcha.min.js
terser uuid.min.js common-utils.js callable-future.js security-utils.js pnotifications.js pushca-binary-helper.js puzzle-captcha.js -o puzzle.captcha.min.js -c -m

#similarity.captcha.min.js
terser uuid.min.js common-utils.js callable-future.js security-utils.js pnotifications.js pushca-binary-helper.js similarity-captcha.js -o similarity.captcha.min.js -c -m


--with obfuscation
terser uuid.min.js common-utils.js callable-future.js security-utils.js pnotifications.js pushca-binary-helper.js puzzle-captcha.js -o puzzle.captcha.min.js -c "passes=3,drop_console=true,drop_debugger=true" -m "toplevel=true,keep_fnames=false,keep_classnames=false" --toplevel


--file sharing widget with obfuscation
terser fp.min.js detect.min.js client.min.js uuid.min.js qrcode.min.js jsQR.js purify.min.js device-secret.js common-utils.js thumbnail-utils.js thumbnail-image.js thumbnail-video.js thumbnail-text.js thumbnail-generator.js callable-future.js pnotifications.js pushca-binary-helper.js security-utils.js gateway-server.js binary-chunks-db.js consent-dialog.js file-sharing-commons.js file-sharing-embedded.js -o file.sharing.min.js -c "passes=3,drop_console=true,drop_debugger=true" -m "toplevel=true,keep_fnames=false,keep_classnames=false" --toplevel

--ws binary ping
terser fp.min.js common-utils.js callable-future.js uuid.min.js security-utils.js owner-signature.js pnotifications.js pushca-binary-helper.js backend-binary-ping.js -o backend.binary.ping.min.js -c "passes=3,drop_console=false,drop_debugger=true" -m "toplevel=true,keep_fnames=false,keep_classnames=false" --toplevel

terser fp.min.js common-utils.js callable-future.js uuid.min.js security-utils.js owner-signature.js pnotifications.js pushca-binary-helper.js backend-binary-ping.js -o backend.binary.silent.ping.min.js -c "passes=3,drop_console=true,drop_debugger=true" -m "toplevel=true,keep_fnames=false,keep_classnames=false" --toplevel

--similarity captcha with obfuscation
terser fp.min.js common-utils.js callable-future.js uuid.min.js security-utils.js owner-signature.js pnotifications.js pushca-binary-helper.js validate-human-token.js embedded-similarity-captcha.js -o similarity.challenge.min.js -c "passes=3,drop_console=true,drop_debugger=true" -m "toplevel=true,keep_fnames=false,keep_classnames=false" --toplevel
